Marama {
  --day-radius: 6px
  --day-border-radius: 2px
  --day-gap: 1px

  width: calc(7 * 2 * var(--day-radius) +  6 * var(--day-gap))
  /* max of 6 weeks + day labels, with gaps between each */

  div.month-name {
    font-size: 20px
    font-weight: bold
    text-align: left
    cursor: pointer
    margin-bottom: 5px
  }

  div.days {
    grid-gap: var(--day-gap)
    justify-content: start
    align-content: start

    div.MaramaDay {}
  }
}
